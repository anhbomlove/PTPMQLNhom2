@model MvcMovie.Models.BMIModel

@{
    ViewData["Title"] = "Tính Chỉ Số BMI";
}

<h1>@ViewBag.InfoMessage</h1>

<form method="post" asp-action="Index">
    <label>Nhập Cân Nặng (kg):</label>
    <input type="number" name="Weight" value="@Model.Weight" min="1" max="300" step="0.1" required>
    <span asp-validation-for="Weight" class="text-danger"></span>
    <br />
    <label>Nhập Chiều Cao (m):</label>
    <input type="number" name="Height" value="@Model.Height" min="0.5" max="2.5" step="0.01" required>
    <span asp-validation-for="Height" class="text-danger"></span>
    <br />
    <input type="submit" value="Tính BMI">
</form>


<!-- Hiển thị kết quả nếu có -->
@if (Model != null && Model.BMI > 0)
{
    <p>Chỉ số BMI của bạn là: @Model.BMI, Kết quả: @Model.Result</p>
}